<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ACNH Villager Birthdays</title>
</head>
<body>

<div class="intro">
<h1>üéÇ Villager Birthday Calendar üéÅ</h1>
<h2>Never let a villager's birthday sneak up on you again! üéâ</h2>
<ol>
<li>Find your villagers</li>
<li>Tap each one</li>
<li>Click "Subscribe" to import!</li>
</ol>

<p>Or, copy into an app: <a href="https://support.google.com/calendar/answer/37118?co=GENIE.Platform%3DDesktop&hl=en">Google Calendar</a></p>
</div>
<div class="calendar hidden">
<p>
  <input type="text" class="calendar-url">
  <span class="copy">Copy</span>
</p>
<p class="link"><a href="">Subscribe</a></p>
</div>
{% for val in villagers %}
<div class="villager" data-name="{{val.name['name-en'].toLowerCase()}}">
  <img loading="lazy" src="https://acnhapi.com/images/villagers/{{val['file-name']}}" width="250" height="250">
  <p>{{val.name['name-en']}} - {{val['birthday-string']}}</p>
</div>
{% endfor %}

<script>
let names = [];
document.querySelector('.calendar-url').addEventListener('focus', e => {
  e.target.select();
});
const closest = (el, className) => {
  if (el.classList.contains(className)) {
    return el;
  }
  return closest(el.parentElement, className);
}
document.querySelectorAll('.villager').forEach(v => {
  v.addEventListener('click', e => {
    const el = closest(e.target, 'villager');
    const name = el.dataset.name;
    updateVillager(name);
    el.classList.toggle('selected');
    renderImg();
  });
})
const updateVillager = name => {
  if (names.includes(name)) {
    names = names.filter(n => n !== name);
  } else {
    names = [...names, name];
  }
}

const renderImg = () => {
  const calendarUrl = document.querySelector('.calendar-url');
  const villagers = encodeURIComponent(names.join(','));
  const url = `webcal://acnh-birthdays.steele.blue/cal?villagers=${villagers}`;
  calendarUrl.value = url;
  document.querySelector('.link a').href=url;
  const calendarWrapper = document.querySelector('.calendar');
  if (names.length > 0) {
    calendarWrapper.classList.remove('hidden');
  } else {
    calendarWrapper.classList.add('hidden');
  }
}
document.querySelector('.copy').addEventListener('click', async e => {
  const calendarUrl = document.querySelector('.calendar-url');
  await navigator.clipboard.writeText(calendarUrl.value);
})
</script>
<style>
.calendar {
  position: sticky;
  top: 0;
  background: white;
}
.calendar p {
  margin: 0;
}
.villager {
  display: flex;
  align-items: center;
}
.villager img {
  max-width: 75px;
  max-height: 75px;
  margin-right: 20px;
}
.calendar-url {
  width: calc(100% - 60px);
}
.selected {
  background-color: #aaa;
}
body {
  margin: auto;
  max-width: 500px;
  border-radius: 5px;
  background-color: white;
}
html {
  background-color: #fadbff;
}
.intro {
  text-align: center;
}
.intro ol {
  display: inline-block;
  text-align: left;
}
.hidden {
  display: none;
}
.link {
  text-align: center;
  font-size: 2em;
  font-weight: bold;
  font-color: black;
}
</style>
  
</body>

</html>